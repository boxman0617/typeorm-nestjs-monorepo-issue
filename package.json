{
  "name": "orders-be",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/orders-be/test/jest-e2e.json",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js",
    "db:setup": "ts-node scripts/db-setup.ts",
    "app:fulfillment-service:build": "nest build fulfillment-service",
    "app:order-management-service:build": "nest build order-management-service",
    "app:organizations-service:build": "nest build organizations-service",
    "app:customer-directory-service:build": "nest build customer-directory-service",
    "app:gql-service:build": "nest build gql-service",
    "app:fulfillment-service:dev": "nest start --watch fulfillment-service",
    "app:order-management-service:dev": "nest start --watch order-management-service",
    "app:organizations-service:dev": "nest start --watch organizations-service",
    "app:customer-directory-service:dev": "nest start --watch customer-directory-service",
    "app:gql-service:dev": "nest start --watch gql-service",
    "generate:docker-compose": "ts-node scripts/generate-docker-compose-files.ts",
    "generate:docker-files": "ts-node scripts/generate-docker-files.ts",
    "generate:docker": "yarn generate:docker-compose && yarn generate:docker-files"
  },
  "dependencies": {
    "@nestjs/common": "^7.0.0",
    "@nestjs/core": "^7.0.0",
    "@nestjs/microservices": "^7.3.2",
    "@nestjs/platform-express": "^7.0.0",
    "@nestjs/typeorm": "^7.1.0",
    "@nestjs/config": "^0.5.0",
    "pm2": "^4.4.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.4",
    "dotenv": "^8.2.0",
    "typeorm": "^0.2.25",
    "pg": "^8.3.0",
    "pg-god": "^1.0.5",
    "grpc": "^1.24.3",
    "@grpc/proto-loader": "^0.5.5",
    "@nestjs/graphql": "^7.5.5",
    "graphql-tools": "^6.0.13",
    "graphql": "^15.3.0",
    "apollo-server-express": "^2.15.1"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "json2yaml": "^1.1.0",
    "@nestjs/cli": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.0",
    "@types/express": "^4.17.3",
    "@types/jest": "25.2.3",
    "@types/node": "^13.9.1",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "3.0.2",
    "@typescript-eslint/parser": "3.0.2",
    "eslint": "7.1.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "jest": "26.0.1",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "26.1.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/"
    ]
  }
}
